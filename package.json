{
	"name": "grit-cli",
	"version": "0.5.8",
	"description": "Simple and flexible scaffolding",
	"main": "dist/index.js",
	"bin": {
		"grit": "dist/cli/index.js"
	},
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"/cli.js",
		"!**/*.(test|spec).ts"
	],
	"scripts": {
		"start": "npm run build && npm run cli",
		"build:watch": "nodemon --watch src -e ts --ignore dist --exec npm run build",
		"cli": "node ./dist/cli/index.js",
		"build": "npm run clean && tsup src/index.ts src/cli/index.ts --dts",
		"clean": "rimraf ./dist",
		"test": "jest",
		"lint": "eslint . --fix",
		"prepublishOnly": "npm run build",
		"release": "dotenv release-it",
		"release:ci": "dotenv release-it --ci"
	},
	"license": "MIT",
	"engines": {
		"node": ">=12"
	},
	"dependencies": {
		"chalk": "4.1.2",
		"commander": "^8.3.0",
		"inquirer": "^8.2.0",
		"ora": "^6.0.1",
		"update-notifier": "^5.1.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.8",
		"@babel/core": "^7.15.5",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.15.4",
		"@babel/preset-typescript": "^7.15.0",
		"@types/chalk": "^2.2.0",
		"@types/commander": "^2.12.2",
		"@types/figlet": "^1.5.4",
		"@types/inquirer": "^8.1.3",
		"@types/jest": "^25.2.2",
		"@types/lodash": "^4.14.176",
		"@types/micromatch": "^4.0.1",
		"@types/mkdirp": "^1.0.2",
		"@types/move-file": "^1.1.0",
		"@types/node": "^16.7.10",
		"@types/parse-package-name": "^0.1.0",
		"@types/rimraf": "^3.0.2",
		"@types/update-notifier": "^4.1.0",
		"@typescript-eslint/eslint-plugin": "^2.33.0",
		"@typescript-eslint/parser": "^2.33.0",
		"alias-hq": "^5.2.1",
		"babel-jest": "^27.1.0",
		"babel-plugin-module-resolver": "^4.1.0",
		"cz-conventional-changelog": "3.2.0",
		"dotenv-cli": "^4.0.0",
		"env-paths": "^2.2.0",
		"esbuild": "^0.13.10",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^26.0.1",
		"prettier": "^2.3.2",
		"release-it": "^14.11.8",
		"ts-node": "^8.10.2",
		"tsup": "^5.5.0",
		"type-fest": "^2.5.2",
		"typescript": "^4.1.2",
		"yarn-global": "^1.2.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"keywords": [
		"generator",
		"yeoman",
		"template",
		"scaffold",
		"automation",
		"simple",
		"easy",
		"workflow"
	]
}
